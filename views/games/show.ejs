<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8">
	<title>Game Page</title>
</head>

<body>
	<header>
		<h1><%= game.title %></h1>
		<nav>
			<ul>
				<li>
					<a href="/">Home</a>
				</li>
				<li>
					<a href="/games">Game Index</a>
				</li>
			</ul>
		</nav>
	</header>
	<main>
		<section>
			<%= game.title %>
		</section>
		<section>
			<%= game.author %>
		</section>
		<section>
			<%= game.publisher %>
		</section>

        <section>
            <form action="/games/<%=game._id%>?_method=DELETE" method="POST">
                <input type="submit" value="Delete Game" />
            </form>
        </section>
		<section>
			<a href="<%=game._id%>edit">Edit</a>
		</section>
	</main>
</body>

</html>